@page
@model string

<!DOCTYPE html>

<html>
<head>
    <title>Manage</title>
</head>
<body>
<div>
    <div class="row">
        <ul id="messagesList">
        </ul>

        <div class="col-6">
            <p>Сессия: @ViewBag.sessionId</p>
            <input type="hidden" id="sessionId" value="@ViewBag.sessionId">

            <input type="button" id="startSession" value="Запустить сессию"/>
            <input type="button" id="endSession" value="Завершить сессию"/>
        </div>
        <div class="manageUser" style="display: flex; flex-direction: row">
            <form>
                <input type="text" name="userId" id="userId" placeholder="ID ученика">
                <input type="button" id="expelStudentButton" value="Выгнать ученика">
            </form>
        </div>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/manage.js"></script>
</body>
</html>